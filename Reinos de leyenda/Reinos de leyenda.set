; Declaración de variables.

#Var Version {2.6, 18/02/2025}


;Portada y bienvenida:

#GTrigger {LPmud version: FluffOS *} {
#GagOn
} {} AnyCase

#GTrigger {Introduce el nombre de tu personaje:<VERSION>} {
#UnGagOn;
#Play {RL\Generales\Conectar1.wav}
} {} AnyCase

#GTrigger {Este MUD está ambientado en el multiverso de Eirea. Consulta la Eireapedia (ver "Comunidad y recursos" a*} {
#If {@ModoE = 1} {
 #GagOn
}
} {} AnyCase

#GTrigger {  Eventos                                                                                 } {
#UnGagOn
} {} AnyCase

#GTrigger {*Los Dioses te dan la bienvenida a sus Reinos de Leyenda, *} {
#Play {RL\Generales\Conectar2.wav};
#Say {Scrips RL @Version};
#If {@ModoE = 1} {
 #Say {Modo experto activado} NoDisplay|Output
};
#If {@ModoS = 1} {
 #Say {Modo silencioso activado} NoDisplay|Output
};
 FuncModoJuego
} {} AnyCase


#GTrigger {* Son las *:* del * de * del * Era *} {
#If {%2 >= 7 and %2 < 19} {
 #Var MomentoDia dia
} {
 #Var MomentoDia noche
}
} {} AnyCase

#GTrigger {Tu personaje ya se encuentra en Reinos de Leyenda. ¿Deseas entrar con la copia existente? [[]s/n] } {
#Play {RL\Generales\Conectar3.wav}
} {} AnyCase


;Desconexión:

#GTrigger {Te concentras en orbitar hacia el limbo para proyectar allí tu cuerpo mientras tu conciencia necesite *} {
#Play {RL\Generales\Desconectar1.wav}
} {} AnyCase

#GTrigger {Te iluminas y orbitas hacia el limbo donde tu cuerpo descansará hasta que puedas volver a Eirea.} {
#If {@AlertaVida1 <> 0} {
 #PC @AlertaVida1 stop
};
#If {@AlertaVida2 <> 0} {
 #PC @AlertaVida2 stop
};
#If {@AlertaVida3 <> 0} {
 #PC @AlertaVida3 stop
};
#If {@SAmbAct1 <> 0} {
 FuncStopAmbiente 1;
};
#If {@SAmbAct2 <> 0} {
 FuncStopAmbiente 2
};
#Play {RL\Generales\Desconectar2.wav}
} {} AnyCase

#GTrigger {  Agradecimientos:} {
#GagOn Voice
} {} AnyCase

#GTrigger {                    posible que el MUD siga mejorando.} {
#UnGagOn;
#GagLine Voice
} {}
