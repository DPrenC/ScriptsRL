;Módulo: Guardabosques.set
;Versión: 1.4, 24/11/2022
;Descripción: Triggers y configs para la clase guardabosque.
;Autor: Rhomdur.

;Carga de configuraciones generales:
#Load ScripsRL\Clases\Cazadores.set
#Load ScripsRL\Clases\Combate_fisico.set


;Declaración de variables:
#Var FlagBloqueosClase 1


;Función para los bloqueos de clase.
#GAlias FBloqueosClase {
#Var FlagBloqueoV 1;
#If {%IfWord("doble golpe",%1, )} {
 #Play {RL\Bloqueos\Guardabosques\Doblegolpe.wav};
 #Abort
};
#Var FlagBloqueoV 0
}


;Cazar:

#GTrigger {Observas los movimientos de * para cazar de forma efectiva.} {
#Play {RL\Habilidades\Generales\Impulso1.wav};
#GagLine Voice
} {} AnyCase

#GTrigger {Observas desde tu escondite los movimientos de * para cazar de forma efectiva.} {
#Play {RL\Habilidades\Generales\Impulso1.wav};
#GagLine Voice
} {} AnyCase

#GTrigger {*[#] ¡Cazas a * veces de forma salvaje, alcanzándole * veces!} {
#If {@ModoE = 1} {
 FEventos %3 impactos;
 #Say {%3 impactos} NoDisplay|incoming;
 #GagLine voice
};
#Alarm Cazar 7 {
 #Play {RL\Bloqueos\Bloqueo.wav};
 #Play {RL\Bloqueos\Guardabosques\Cazar.wav}
};
#Play {RL\Habilidades\Guardabosques\Cazar2.wav}
} {} AnyCase

#GTrigger {*[#] ¡Cazas a * veces de forma salvaje, alcanzándole 1 vez!} {
#If {@ModoE = 1} {
 FEventos un impacto;
 #Say {un impacto} NoDisplay|incoming;
 #GagLine voice
};
#Alarm Cazar 7 {
 #Play {RL\Bloqueos\Bloqueo.wav};
 #Play {RL\Bloqueos\Guardabosques\Cazar.wav}
};
#Play {RL\Habilidades\Guardabosques\Cazar1.wav}
} {} AnyCase

#GTrigger {*[#] ¡Cazas a * veces de forma salvaje, sin conseguir hacerle daño!} {
#If {@ModoE = 1} {
 #GagLine voice
};
#Alarm Cazar 7 {
 #Play {RL\Bloqueos\Bloqueo.wav};
 #Play {RL\Bloqueos\Guardabosques\Cazar.wav}
};
#Play {RL\Habilidades\General\Habilidad esquivada.wav}
} {} AnyCase


#TRIGGER {Ordenas a tus criaturas * *} {#Play {RL\Generales\ordenar a poke.wav}} {}
#TRIGGER {#* ¡Cazas a * * veces de forma salvaje, alcanzándole * veces con * golpe crítico!!} {#Play {RL\Habilidades\Guardabosques\Cazar critico.wav}} {}
#TRIGGER {** ¡Cazas a * * veces de forma salvaje, alcanzándole * veces con * golpes críticos!!} {#Play {RL\Habilidades\Guardabosques\Cazar critico.wav}} {}

#GTrigger {*[#] ¡* se ha escapado!} {
#If {@ModoE = 1} {
 #GagLine voice
};
#Alarm Cazar 7 {
 #Play {RL\Bloqueos\Bloqueo.wav};
 #Play {RL\Bloqueos\Guardabosques\Cazar.wav}
};
#Play {RL\Habilidades\Generales\Objetivo perdido.wav}
} {} AnyCase


