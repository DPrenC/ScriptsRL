;Keys:

#GKey alt-s {
seguir @Objetivo
}

#GKey alt-d {
#If {@ModoJ = 2} {
 doblegolpe xp
} {
 #If {@AutoCentrar = 1} {
  centrar x;doblegolpe x
 } {
  doblegolpe x
 }
}}

#GKey alt-f {
#If {@ModoJ = 2} {
 cazar xp
} {
 #If {@AutoCentrar = 1} {
  centrar x;cazar x
 } {
  cazar x
 }
}}
