;Triggers de actualización del grupo:

#GTrigger {Grupo liderado por: *} {
#Var GrupoLider %1;
#Var grupo;
#Class GestionGrupos enable
} {} AnyCase

#GTrigger {  - *} {
#AddItem Grupo %1
} {GestionGrupos}

#GTrigger {> } {
#Play {RL\Generales\Grupo actualizado.wav};
#Class GestionGrupos disable
} {GestionGrupos}



;Keys:

;Despliega la lista de miembros de un grupo:
#GKey ctrl-shift-g {
#If {@Grupo = ""} {
 #Say {No perteneces a ningún grupo} NoDisplay|Output
} {
 #Pick {@Grupo}
}
} {}

#Class 0
