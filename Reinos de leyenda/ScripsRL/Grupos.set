} {} AnyCase

#GTrigger {[[]Grupo] * se une al grupo.} {
FEventos %0;
#If {@Grupo = 0} {
 #Var Grupo %1
} {
 #Var Grupo {@Grupo|%1}
};
#Play {RL\Generales\Grupo evento.wav}
} {} AnyCase

#GTrigger {[[]Grupo] Unes al grupo a *.} {
FEventos %0;
#If {@Grupo = 0} {
 #Var Grupo %1
} {
