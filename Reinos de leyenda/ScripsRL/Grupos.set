#GTrigger {*Has creado tu propio grupo.} {
FFiltroCanales %0;
#If {@FlagFiltroCanales = 1} {#Abort};
FEventos %0;
#Var Grupo %char;
#Var GrupoLider %char
} {} AnyCase

#GTrigger {[[]Grupo] Te unes al grupo liderado por *.} {
FEventos %0;
#Var Grupo %1;
#Var GrupoLider %1;
#Play {RL\Generales\Grupo evento.wav}
} {} AnyCase

