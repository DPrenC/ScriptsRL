;Keys para las comunicaciones:


;Keys para la telepatía:

; Shift-f3 saca el historial de tels.
#GKey shift-F3 {
#If {@HistorialTels = ""} {
 #Say {Historial de telepatía vacío} Nodisplay|output
} {
 #Pick {%ReverseList(@HistorialTels)}
}
}

;Alt f3 lee el ultimo tel.
#GKey alt-f3 {
#Say {@{UltimoTel}} NoDisplay|Output}

;Control f3 silencia la lectura de tels entrantes
#GKey control-f3 {
#if {@SilencioTels = 0} {
 #Var SilencioTels 1;
 #say {Lectura de Tels desactivada} nodisplay|Output;
 #Play {RL\Comunicaciones\Canal muteado.wav}
} {
 #Var SilencioTels 0;
 #say {Lectura de Tels activada} nodisplay|Output;
 #Play {RL\Comunicaciones\Canal desmuteado.wav}
}
}

;Alt t dice el nombre del remitente del último tel recibido
#GKey alt-t {
#If {@Remitente = ""} {
 #say {Nadie te ha enviado mensajes de telepatía por el momento} nodisplay|Output
} {
 #Say {Telepatía con @Remitente} NoDisplay|Output
}
}

;El alias r responde automáticamente al remitente del último tel recibido.
#GAlias r {t @Remitente %0}

;ctrl-t despliega la lista de remitentes recientes:
