 FCanalBando %1 %2 %3;
 #Play {RL\Comunicaciones\Interbando.wav}
};
#If {%IfWord(%1,@Ciudadanias,|)} {
 FCanalCiudadania %1 %2 %3;
 #Play {RL\Comunicaciones\Ciudadania.wav}
};
#If {%IfWord(%1,"Chat", )} {
